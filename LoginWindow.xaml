<Window x:Class="OrderExample.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderExample"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300"
        >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Account" Grid.Column="0" Grid.Row="0"
                   Margin="0 10"/>
        <TextBox Grid.Column="1" Grid.Row="0"
                 x:Name ="AccountTb"
                 Margin="0 10"/>
        <TextBlock Text="Password" Grid.Column="0" Grid.Row="1"
                   Margin="0 10"/>
        <PasswordBox Grid.Column="1" Grid.Row="1"
                     x:Name ="PasswordTb"
                    Margin="0 10"/>
        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                Margin="0"
                Content="Login"
                Click="ButtonBase_OnClick"/>
    </Grid>
</Window>
